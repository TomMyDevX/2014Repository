<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="240dp"
android:layout_alignParentTop="true"
android:layout_centerHorizontal="true" >

<LinearLayout
    android:id="@+id/one_to_three"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal"
    android:weightSum="3" >

    <Button
        android:id="@+id/one_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="1dp"
        android:text="1"
        android:background="@drawable/numpad_sector"
        android:textSize="25sp" />

    <Button
        android:id="@+id/two_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/numpad_sector"
               android:layout_margin="1dp"
        android:text="2"
        android:textSize="25sp" />

    <Button
        android:id="@+id/three_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/numpad_sector"
        android:layout_weight="1"
               android:layout_margin="1dp"
        android:text="3"
        android:textSize="25sp" />
</LinearLayout>

<LinearLayout
    android:id="@+id/four_to_six"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_below="@+id/one_to_three"
    android:orientation="horizontal"
    android:weightSum="3" >

    <Button
        android:id="@+id/four_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="4"
        android:background="@drawable/numpad_sector"
               android:layout_margin="1dp"
        android:textSize="25sp" />

    <Button
        android:id="@+id/five_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="5"
               android:layout_margin="1dp"
        android:background="@drawable/numpad_sector"
        android:textSize="25sp" />

    <Button
        android:id="@+id/six_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/numpad_sector"
        android:layout_weight="1"
               android:layout_margin="1dp"
        android:text="6"
        android:textSize="25sp" />
</LinearLayout>

<LinearLayout
    android:id="@+id/seven_to_nine"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_below="@+id/four_to_six"
    android:orientation="horizontal"
    android:weightSum="3" >

    <Button
        android:id="@+id/seven_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/numpad_sector"
        android:layout_weight="1"
               android:layout_margin="1dp"
        android:text="7"
        android:textSize="25sp" />

    <Button
        android:id="@+id/eight_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
               android:layout_margin="1dp"
        android:layout_weight="1"
        android:background="@drawable/numpad_sector"
        android:text="8"
        android:textSize="25sp" />

    <Button
        android:id="@+id/nine_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/numpad_sector"
        android:layout_weight="1"
               android:layout_margin="1dp"
        android:text="9"
        android:textSize="25sp" />
</LinearLayout>

<LinearLayout
    android:id="@+id/zero"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_below="@+id/seven_to_nine"
    android:orientation="horizontal"
    android:weightSum="3" >

    <Button
        android:id="@+id/zero_btn"
        android:layout_width="0dp"
        android:background="@drawable/numpad_sector"
        android:layout_height="match_parent"
        android:layout_weight="1"
               android:layout_margin="1dp"
        android:text="0"
        android:textSize="25sp" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:background="@drawable/numpad_sector"
        android:text="Delete"
        android:textSize="25sp" />

    <Button
        android:id="@+id/done_btn"
        android:layout_width="0dp"
        android:background="@drawable/numpad_sector"
        android:layout_height="match_parent"
        android:layout_weight="1"
               android:layout_margin="1dp"
        android:text="Done"
        android:textSize="25sp" />

</LinearLayout>
    </RelativeLayout>